        if (midiOutput) {
          try {
            sendMIDIChord(midiOutput, validMidiNotes);
          } catch (error) {
            console.error('Error sending MIDI chord:', error);
          }
        } else {
          console.warn('No MIDI output available for "internal" synth');
        }
      } else if (synth) {
